datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}


model NextResource {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title String @db.VarChar(255) @unique
    description String @db.Text
    category Category
    tags String
    link String @unique
    authorId String
    @@index([authorId])

  }

enum Category {
  Tutorial
  UI_Library
  Package
  Tool
  Starter
  Other
}

