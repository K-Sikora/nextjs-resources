datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}


model NextResource {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String    @db.VarChar(255) @unique
  description String    @db.Text
  category    Category
  categorySlug String
  tags        Tag[]
  link        String    @unique
  authorId    String
  likes       Like[]
  likesCount  Int       @default(0)
  @@index([authorId])
}

model Tag {
  id          String         @id @default(cuid())
  name        String         @unique
  resources   NextResource[] 
}

model Like {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  resourceId String
  userId     String
  resource   NextResource @relation(fields: [resourceId], references: [id], onDelete: Cascade) 
  @@index([resourceId])
  @@index([userId])
}




enum Category {
  Tutorials
  UI_Libraries
  Packages
  Tools
  Starters
  Other
}

